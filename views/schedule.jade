
extends layout

block content
  section 
    h1= title + " 알림"
    form(action="/schedule/save", method="post")
      p(align="right") 날짜선택 : 
        input(type="week", name="weeknum", step="1", min="2015-W36", value="2015-W36")
      table.classil
        thead
          tr
            th(scope="cols") 시간
            th(scope="cols") 월요일
            th(scope="cols") 화요일
            th(scope="cols") 수요일
            th(scope="cols") 목요일
            th(scope="cols") 금요일
            th(scope="cols") 토요일
        tbody
          - for(var i = 0; i < 9; i++) {
            tr
              th(scope="row") #{i+1}교시
              td
                select(name='mon#{i+1}')
                  option(id = 'mon#{i+1}0', value=" ", selected)
                  option(id = 'mon#{i+1}1', value=정보통신) 정보통신
                  option(id = 'mon#{i+1}2', value=객체지향 프로그래밍) 객체지향 프로그래밍
                  option(id = 'mon#{i+1}3', value=이산수학) 이산수학
              td
                select(name='tue#{i+1}') 
                  option(value=" ", selected)
                  option(id = 'tue#{i+1}1', value=정보통신) 정보통신
                  option(id = 'tue#{i+1}2', value=객체지향 프로그래밍) 객체지향 프로그래밍
                  option(id = 'tue#{i+1}3', value=이산수학) 이산수학
              td
                select(name='wed#{i+1}')
                  option(value=" ", selected)
                  option(id = 'wed#{i+1}1', value=정보통신) 정보통신
                  option(id = 'wed#{i+1}2', value=객체지향 프로그래밍) 객체지향 프로그래밍
                  option(id = 'wed#{i+1}3', value=이산수학) 이산수학
              td
                select(name='thu#{i+1}')
                  option(value=" ", selected)
                  option(id = 'thu#{i+1}1', value=정보통신) 정보통신
                  option(id = 'thu#{i+1}2', value=객체지향 프로그래밍) 객체지향 프로그래밍
                  option(id = 'thu#{i+1}3', value=이산수학) 이산수학
              td
                select(name='fri#{i+1}')
                  option(value=" ", selected)
                  option(id = 'fri#{i+1}1', value=정보통신) 정보통신
                  option(id = 'fri#{i+1}2', value=객체지향 프로그래밍) 객체지향 프로그래밍
                  option(id = 'fri#{i+1}3', value=이산수학) 이산수학 
              td
                select(name='sat#{i+1}')
                  option(value=" ", selected)
                  option(id = 'sat#{i+1}1', value=정보통신) 정보통신
                  option(id = 'sat#{i+1}2', value=객체지향 프로그래밍) 객체지향 프로그래밍
                  option(id = 'sat#{i+1}3', value=이산수학) 이산수학
          - }  
 
      input(id='saveform' type='submit' value='저장하기')
      input(type='submit' value='변경하기', formmethod='post', formaction="/schedule/resave")
      script document.getElementById('weeknum').onchange = function(e) { location.replace("/schedule/{weeknum.value}"); }     
    hr  
 
 
