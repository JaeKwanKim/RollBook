            tr
              td= data[i].classnum
              td= data[i].name
              td= data[i].hp
              td= data[i].setclass1
              td= data[i].setclass2
              td= data[i].setclass3
              td= data[i].setclass4
              td= data[i].setclass5
              td= data[i].setclass6
              td
                a#btn(class="s_edit", href="student/edit/#{data[i].classnum}") 변경  
                a#btn(class="s_delete", href="student/delete/#{data[i].classnum}") 삭제
