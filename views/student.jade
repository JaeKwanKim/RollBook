block content
  section#student 
    h1= title + " 알림"
    br
    #studentinfo
      table.classil
        thead
          tr
            th(scope="cols") 학번
            th(scope="cols") 이름
            th(scope="cols") 핸드폰
            th(scope="cols") 수강과목
            th(scope="cols") 수강과목
